@PrimaryButtonStyle = TextButtonStyle(
  Default: (Background: #3a7bd5, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, RenderUppercase: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #4a8be5, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, RenderUppercase: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #2a6bc5, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, RenderUppercase: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@SecondaryButtonStyle = TextButtonStyle(
  Default: (Background: #2b3542, LabelStyle: (FontSize: 16, TextColor: #96a9be, RenderBold: true, RenderUppercase: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3b4552, LabelStyle: (FontSize: 16, TextColor: #b6c9de, RenderBold: true, RenderUppercase: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1b2532, LabelStyle: (FontSize: 16, TextColor: #96a9be, RenderBold: true, RenderUppercase: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  Anchor: (Width: 750, Height: 550);
  Background: #141c26(0.98);
  LayoutMode: Top;
  Padding: (Full: 24);

  Label #Headline {
    Text: "Welcome to Lucys Campfire!";
    Anchor: (Height: 55);
    Style: (
      FontSize: 32,
      TextColor: #ffffff,
      HorizontalAlignment: Center,
      RenderBold: true
    );
  }

  Group {
    Anchor: (Height: 1);
    Background: #2b3542;
  }

  Group { Anchor: (Height: 16); }

  Label #Message {
    Text: "Select the background of your character!";
    Anchor: (Height: 50);
    Style: (
      FontSize: 16,
      TextColor: #96a9be
    );
  }

  Label #Message {
    Text:
"This will influence your starting experience into the game.
Selecting a background will COMPLETELY RESET your inventory.
If you want to keep your current progress: Simply ignore this message by pressing ESC.";
    Anchor: (Height: 50);
    Style: (
      FontSize: 16,
      TextColor: #96a9be,
      Wrap: true
    );
  }



  Group { Anchor: (Height: 80); }

  Label #Headline {
    Text: "Start your journey as: ";
    Anchor: (Height: 45);
    Style: (
      FontSize: 20,
      TextColor: #ffffff,
      HorizontalAlignment: Center,
      RenderBold: true
    );
  }

  Group { Anchor: (Height: 2); }

  Label #BackgroundName {
    Text: "Warrior";
    Anchor: (Height: 45);
    Style: (
      FontSize: 20,
      TextColor: #ffffff,
      HorizontalAlignment: Center,
      RenderBold: true
    );
  }






  Group { FlexWeight: 1; }

  Group {
    LayoutMode: Center;
    Anchor: (Height: 50);

    TextButton #PreviousButton {
      Text: "Previous";
      Anchor: (Width: 140, Height: 44);
      Style: @SecondaryButtonStyle;
    }

    Group { Anchor: (Width: 20); }

    TextButton #SelectButton {
      Text: "Select!";
      Anchor: (Width: 140, Height: 44);
      Style: @PrimaryButtonStyle;
    }

    Group { Anchor: (Width: 20); }

    TextButton #NextButton {
      Text: "Next";
      Anchor: (Width: 140, Height: 44);
      Style: @SecondaryButtonStyle;
    }
  }

  Group { Anchor: (Height: 10); }

  Label {
    Text: "Press ESC to close";
    Anchor: (Height: 16);
    Style: (FontSize: 11, TextColor: #4a5568, HorizontalAlignment: Center);
  }
}